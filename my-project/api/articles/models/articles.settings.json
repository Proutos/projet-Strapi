{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "articles"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "hat": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "title": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
